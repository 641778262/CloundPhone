<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:backgroundTint="@color/alertBackground"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:text="干什么◔ ‸◔？ "
            android:textSize="@dimen/largeFont"
            android:textColor="@color/ignoreTextColor" />

        <Button
            android:id="@+id/delete_device_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/background"
            android:backgroundTint="@color/alertButtonBackground"
            android:text="取消"
            android:textSize="@dimen/largeFont"
            android:textColor="@color/buttonTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_device_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/background"
                android:backgroundTint="@color/cancelButtonBackground"
                android:text="修改"
                android:textSize="@dimen/middleFont"
                android:textColor="@color/buttonTextColor" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/delete_device_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@drawable/background"
                android:backgroundTint="@color/cancelButtonBackground"
                android:text="删除"
                android:textSize="@dimen/middleFont"
                android:textColor="@color/buttonTextColor" />
        </LinearLayout>

        <Button
            android:id="@+id/delete_device_defult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/background"
            android:backgroundTint="@color/cancelButtonBackground"
            android:text="设为默认打开"
            android:textSize="@dimen/middleFont"
            android:textColor="@color/buttonTextColor" />

    </LinearLayout>
</ScrollView>