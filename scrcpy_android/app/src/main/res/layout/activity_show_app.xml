<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/show_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Scrcpy_android"
        android:textSize="@dimen/veryLargeFont"
        android:textStyle="bold"
        android:textColor="#121214"
        android:layout_marginTop="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/show_app_title"
        android:text="欢迎使用Scrcpy_android"
        android:textSize="20sp"
        android:textColor="#38383c"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/show_app_title"
        android:text="本软件基于开源项目Scrcpy"
        android:textSize="20sp"
        android:textColor="#38383c"
        android:layout_marginTop="170dp"
        android:layout_marginStart="80dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/show_app_title"
        android:text="实现了Scrcpy安卓客户端"
        android:textSize="20sp"
        android:textColor="#38383c"
        android:layout_marginTop="220dp"
        android:layout_marginStart="120dp"/>

    <ImageView
        android:id="@+id/show_app_image"
        android:layout_width="330dp"
        android:layout_height="316dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="400dp"
        android:alpha="0.6"
        android:src="@drawable/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_app_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="40dp"
        android:textStyle="bold"
        android:text="隐私政策"
        android:textSize="@dimen/middleFont" />

    <Button
        android:id="@+id/show_app_agree"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/buttonBackground"
        android:text="同意"
        android:textSize="@dimen/largeFont"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>