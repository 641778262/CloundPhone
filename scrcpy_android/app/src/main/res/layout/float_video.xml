<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/float_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_for_float_video"
        android:backgroundTint="@color/cardBackground"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/float_video_title1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/floatVideoTitle"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/float_video_fullscreen"
                android:layout_width="0dp"
                android:layout_height="@dimen/floatVideoTitle"
                android:layout_weight="13"
                android:contentDescription="float_video_fullscreen"
                android:padding="@dimen/floatVideoNavButtonPadding"
                android:src="@drawable/fullscreen"
                android:tint="@color/onCardBackground"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12" />

            <LinearLayout
                android:id="@+id/float_video_bar"
                android:layout_width="0dp"
                android:layout_height="@dimen/floatVideoTitle"
                android:layout_weight="50"
                android:padding="@dimen/floatVideoBarPadding">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/onCardBackgroundSecond" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="12" />

            <ImageView
                android:id="@+id/float_video_stop"
                android:layout_width="0dp"
                android:layout_height="@dimen/floatVideoTitle"
                android:layout_weight="13"
                android:contentDescription="float_video_stop"
                android:padding="@dimen/floatVideoButtonPadding"
                android:src="@drawable/radio_button"
                android:tint="@color/error"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <SurfaceView
            android:id="@+id/float_video_surface"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/float_video_title2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/floatVideoTitle"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

            <ImageView
                android:id="@+id/float_video_switch"
                android:layout_width="0dp"
                android:layout_height="@dimen/floatVideoTitle"
                android:layout_weight="12"
                android:contentDescription="float_video_switch"
                android:padding="@dimen/floatVideoNavButtonPadding"
                android:src="@drawable/nav_switch"
                android:tint="@color/onCardBackground"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

            <ImageView
                android:id="@+id/float_video_home"
                android:layout_width="0dp"
                android:layout_height="@dimen/floatVideoTitle"
                android:layout_weight="12"
                android:contentDescription="float_video_home"
                android:padding="@dimen/floatVideoNavButtonPadding"
                android:src="@drawable/nav_home"
                android:tint="@color/onCardBackground"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

            <ImageView
                android:id="@+id/float_video_back"
                android:layout_width="0dp"
                android:layout_height="@dimen/floatVideoTitle"
                android:layout_weight="12"
                android:contentDescription="float_video_back"
                android:padding="@dimen/floatVideoNavButtonPadding"
                android:src="@drawable/nav_back"
                android:tint="@color/onCardBackground"
                tools:ignore="HardcodedText" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <ImageView
                android:id="@+id/float_video_set_size"
                android:layout_width="0dp"
                android:layout_height="@dimen/floatVideoTitle"
                android:layout_weight="13"
                android:contentDescription="float_video_set_size"
                android:padding="@dimen/floatVideoButtonPadding"
                android:src="@drawable/radio_button"
                android:tint="@color/buttonBackgroundSecond"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/float_video_fps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/floatVideoTitle"
        android:textColor="@color/error"
        android:textSize="@dimen/largeFont"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>